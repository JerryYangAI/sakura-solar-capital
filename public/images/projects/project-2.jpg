<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="skyGradient2" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#4682B4;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#B0E0E6;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="panelGradient2" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#32CD32;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#228B22;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Sky Background -->
  <rect width="400" height="300" fill="url(#skyGradient2)"/>
  
  <!-- Ground -->
  <rect x="0" y="180" width="400" height="120" fill="#9ACD32"/>
  
  <!-- Solar Panels Array -->
  <g transform="translate(30, 120)">
    <!-- Row 1 -->
    <rect x="0" y="0" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="60" y="0" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="120" y="0" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="180" y="0" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="240" y="0" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="300" y="0" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    
    <!-- Row 2 -->
    <rect x="0" y="45" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="60" y="45" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="120" y="45" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="180" y="45" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="240" y="45" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="300" y="45" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    
    <!-- Row 3 -->
    <rect x="0" y="90" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="60" y="90" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="120" y="90" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="180" y="90" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="240" y="90" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
    <rect x="300" y="90" width="50" height="35" fill="url(#panelGradient2)" stroke="#1F4E3D" stroke-width="1"/>
  </g>
  
  <!-- Sun -->
  <circle cx="350" cy="50" r="20" fill="#FFA500" opacity="0.9"/>
  <g stroke="#FFA500" stroke-width="1.5" fill="none" opacity="0.7">
    <line x1="350" y1="15" x2="350" y2="25"/>
    <line x1="375" y1="50" x2="385" y2="50"/>
    <line x1="350" y1="85" x2="350" y2="95"/>
    <line x1="325" y1="50" x2="315" y2="50"/>
  </g>
  
  <!-- Text Overlay -->
  <rect x="0" y="0" width="400" height="60" fill="rgba(0,0,0,0.7)"/>
  <text x="200" y="25" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="white">日本太阳能电站项目 #002</text>
  <text x="200" y="45" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#FFA500">投资额: 450万人民币 | 年化收益: 15%</text>
</svg>



